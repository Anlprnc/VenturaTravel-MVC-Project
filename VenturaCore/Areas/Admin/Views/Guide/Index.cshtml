@using EntityLayer.Concrete
@model List<Guide>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<h1>Guide List</h1>

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Image</th>
        <th>Name Surname</th>
        <th>Description</th>
        <th>Status</th>
        <th>Edit</th>
    </tr>
    @foreach (var item in Model)
    {
        count++;
        <tr>
            <td>@count</td>
            <td><img src="@item.Image" height="50" width="50" class="rounded-circle" /></td>
            <td>@item.Name</td>
            <td>@item.Description</td>
            @{
                if (item.Status == true)
                {
                    <td><a href="#" class="btn btn-outline-warning">Make Passive</a></td>
                }
                else
                {
                    <td><a href="#" class="btn btn-outline-info">Make Active</a></td>
                }
            }
            <td><a href="#" class="btn btn-outline-success">Edit</a></td>
        </tr>
    }
</table>

<a href="/Admin/Guide/AddGuide/" class="btn btn-outline-primary">New Guide Entry</a>