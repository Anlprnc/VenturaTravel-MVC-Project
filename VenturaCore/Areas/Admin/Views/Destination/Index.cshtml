@using EntityLayer.Concrete
@model List<Destination>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<h1>Tour Routes</h1>

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>City</th>
        <th>Price</th>
        <th>Capacity</th>
        <th>See on the site</th>
        <th>Delete</th>
        <th>Update</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            @{
                count = count + 1;
            }
            <td>@count</td>
            <td>@item.City</td>
            <td>@item.Price</td>
            <td>@item.Capacity</td>
            <td>
                <a href="/Destination/DestinationDetails/@item.DestinationID" class="btn btn-outline-info">See on the
                    site</a>
            </td>
            <td>
                <a href="/Admin/Destination/DeleteDestination/@item.DestinationID" class="btn btn-outline-danger">Delete</a>
            </td>
            <td>
                <a href="/Admin/Destination/UpdateDestination/@item.DestinationID"
                    class="btn btn-outline-success">Update</a>
            </td>
        </tr>
    }
</table>

<a href="/Admin/Destination/AddDestination/" class="btn btn-outline-primary">New Tour Route</a>